general {
        colors = true
        interval = 1
}

# order += "battery all"
order += "volume master"
order += "cpu_usage"
order += "memory"
order += "cpu_temperature 0"
order += "tztime local"

battery all {
        format = "%status %percentage %remaining"
        status_chr = "🔌"
        status_bat = "🔋"
        status_unk = "🚫🚫🚫"
        status_full = "💯"
}

memory {
        # format = " U: %used - A: %available "
        format = " 💾 :%used "
	threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
    format = " 🕒 %I:%M%p %d.%m"
}

volume master {
#        format = "🔊: %volume"
	format = "🔊:%volume "
        format_muted = "🔇: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

cpu_usage {
        format = " 🖥️ :%usage "
}

cpu_temperature 0 {
    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input"
    format = " 🌡️:%degrees°C "
}
